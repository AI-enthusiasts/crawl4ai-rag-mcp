# Auto detect text files and perform LF normalization
* text=auto

# Force LF for development files (Unix-style)
*.py text eol=lf
*.sh text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.txt text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.rst text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf
.env* text eol=lf

# Windows-specific files (if any)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pyc binary
*.pyo binary
*.db binary
*.sqlite binary
